    echo "For detailed help, see: .warp/shortcuts.md"
    echo ""
}

# Welcome message
echo "âœ… CLIX Trading Platform Warp optimizations loaded!"
echo "ğŸ’¡ Type 'clix-help' for available shortcuts"
echo "ğŸš€ Dev server should be running at http://localhost:3000"

# Set initial environment
set-env development